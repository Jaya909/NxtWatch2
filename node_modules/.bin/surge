#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/nxtwave/reactjs/coding-practices/nxtWatchApp/node_modules/.pnpm/surge@0.23.0/node_modules/surge/lib/node_modules:/home/nxtwave/reactjs/coding-practices/nxtWatchApp/node_modules/.pnpm/surge@0.23.0/node_modules/surge/node_modules:/home/nxtwave/reactjs/coding-practices/nxtWatchApp/node_modules/.pnpm/surge@0.23.0/node_modules:/home/nxtwave/reactjs/coding-practices/nxtWatchApp/node_modules/.pnpm/node_modules:/home/nxtwave/reactjs/coding-practices/nxtWatchApp/node_modules:/home/nxtwave/reactjs/coding-practices/node_modules:/home/nxtwave/reactjs/node_modules:/home/nxtwave/node_modules:/home/node_modules:/node_modules:/home/nxtwave/reactjs/coding-practices/nxtWatchApp/node_modules/surge/lib/node_modules:/home/nxtwave/reactjs/coding-practices/nxtWatchApp/node_modules/surge/node_modules"
else
  export NODE_PATH="$NODE_PATH:/home/nxtwave/reactjs/coding-practices/nxtWatchApp/node_modules/.pnpm/surge@0.23.0/node_modules/surge/lib/node_modules:/home/nxtwave/reactjs/coding-practices/nxtWatchApp/node_modules/.pnpm/surge@0.23.0/node_modules/surge/node_modules:/home/nxtwave/reactjs/coding-practices/nxtWatchApp/node_modules/.pnpm/surge@0.23.0/node_modules:/home/nxtwave/reactjs/coding-practices/nxtWatchApp/node_modules/.pnpm/node_modules:/home/nxtwave/reactjs/coding-practices/nxtWatchApp/node_modules:/home/nxtwave/reactjs/coding-practices/node_modules:/home/nxtwave/reactjs/node_modules:/home/nxtwave/node_modules:/home/node_modules:/node_modules:/home/nxtwave/reactjs/coding-practices/nxtWatchApp/node_modules/surge/lib/node_modules:/home/nxtwave/reactjs/coding-practices/nxtWatchApp/node_modules/surge/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../surge/lib/cli.js" "$@"
else
  exec node  "$basedir/../surge/lib/cli.js" "$@"
fi
